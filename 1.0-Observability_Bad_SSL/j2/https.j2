{
  "class": "AS3",
  "action": "deploy",
  "persist": true,
  "declaration": {
    "class": "ADC",
    "schemaVersion": "3.0.0",
    "id": "usecase1",
    "label": "Ansible Workshops",
    "remark": "HTTPS with pool",
    "{{ as3_tenant_name }}": {
      "class": "Tenant",
      "{{ F5_VIP_Name }}": {
        "class": "Application",
        "{{ F5_VIP_Name }}": {
          "class": "Service_HTTPS",
          "virtualAddresses": [
            "{{ F5_VIP_IP }}"
          ],
          "profileMultiplex": {
              "bigip": "/Common/oneconnect"
          },
          "pool": "{{ F5_VIP_Name }}_pool",
          "serverTLS": {
					    "bigip": "/Common/clientssl"
					},
          "persistenceMethods": []
        },
        "{{ F5_VIP_Name }}_pool": {
          "class": "Pool",
					"minimumMembersActive": 0,
					"minimumMonitors": "all",
          "monitors": [
            "http"
          ],
          "members": [{
            "servicePort": 80,
            "serverAddresses": [
                    {% set comma = joiner(",") %}
                    {% for mem in pool_members %}
                        {{comma()}} "{{  hostvars[mem]['private_ip']  }}"
                    {% endfor %}
            ]
          }]
        }
      }
    }
  }
}
