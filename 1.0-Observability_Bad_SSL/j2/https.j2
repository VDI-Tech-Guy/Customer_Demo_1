{
  "class": "AS3",
  "action": "deploy",
  "persist": true,
  "declaration": {
    "class": "ADC",
    "schemaVersion": "3.2.0",
    "controls": {
      "class": "Controls",
      "dryRun": false
    },
    "id": "usecase1",
    "label": "Ansible Workshops",
    "remark": "HTTPS with pool",
    "{{ as3_tenant_name }}": {
      "class": "Tenant",
      "{{ F5_VIP_Name }}": {
        "class": "Application",
        "{{ F5_VIP_Name }}": {
          "class": "Service_HTTPS",
          "virtualAddresses": [
            "{{ F5_VIP_IP_2 }}"
          ],
          "pool": "{{ F5_VIP_Name }}_pool",
          "redirect80": false,
          "profileMultiplex": {
            "bigip": "/Common/oneconnect"
          },
          "serverTLS": "{{ F5_VIP_Name }}_cert",
          "persistenceMethods": []
        },
        "{{ F5_VIP_Name }}_pool": {
          "class": "Pool",
          "minimumMembersActive": 0,
          "minimumMonitors": "all",
          "monitors": [
            "http"
          ],
          "members": [{
            "servicePort": 80,
            "serverAddresses": [
              {% set comma = joiner(",") %}
              {% for mem in pool_members %}
              {{comma()}} "{{  hostvars[mem]['ansible_host']  }}"
              {% endfor %}
            ]
          }]
        },
        "{{ F5_VIP_Name }}_cert": {
          "class": "TLS_Server",
          "certificates": [{
            "certificate": "{{ F5_VIP_Name_2 }}_crt"
          }]
        },
        "{{ F5_VIP_Name }}_crt": {
          "class": "Certificate",
          "remark": "in practice we recommend using a passphrase",
          "certificate": "{{ lookup('file', '{{playbook_dir}}/app-demo.crt') | replace('\n', '\\n') }}",
          "privateKey": "{{ lookup('file', '{{playbook_dir}}/app-demo.key') | replace('\n', '\\n') }}"
        }
      }
    }
  }
}
